{
  "name": "randsum",
  "version": "8.0.1",
  "private": false,
  "author": "Alex Jarvis",
  "icon": "https://raw.githubusercontent.com/RANDSUM/randsum-ts/main/icon.webp",
  "description": "The world's most powerful, flexible, and easy-to-use JS dice-roller.",
  "license": "MIT",
  "homepage": "https://github.com/RANDSUM/randsum-ts ",
  "keywords": [
    "dice",
    "d20",
    "dice roller",
    "rpg dice roller",
    "roll",
    "d&d",
    "dnd",
    "rpg",
    "ttrpg",
    "rpgs",
    "ttrpgs",
    "tabletop",
    "dungeons",
    "dragons",
    "roleplaying game",
    "rand",
    "random",
    "RNG",
    "notation",
    "typescript",
    "bun"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "source": "./src/index.ts",
  "files": [
    "./dist/index.js",
    "./dist/index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/RANDSUM/randsum-ts.git"
  },
  "sideEffects": false,
  "scripts": {
    "analyze": "size-limit",
    "build": "bun run clean && bun run build.ts && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --project tsconfig.types.json",
    "clean": "rm -rf ./dist/",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format:fix": "prettier . --write",
    "format": "prettier . --check",
    "gen:docs": "typedoc ./src/index.ts",
    "ts:check": "tsc --noEmit",
    "prepublish": "bun run build",
    "postversion": "git push --no-verify && git push --tags --no-verify"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "4 KB"
    }
  ],
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@size-limit/preset-small-lib": "^11.1.6",
    "@types/eslint__js": "^8.42.3",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "bun-types": "latest",
    "eslint": "^9.19.0",
    "prettier": "^3.4.2",
    "size-limit": "^11.1.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0",
    "typedoc": "^0.27.6"
  },
  "dependencies": {
    "uuid": "^11.0.5"
  },
  "type": "module"
}
